<mui:ModernWindow x:Class="HDPClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:obj="clr-namespace:HDPClientObjLib;assembly=HDPClientObjLib"
    xmlns:local="clr-namespace:HDPClient"
    xmlns:mui="http://gu.com/ModernUI"    
                  ContentSource="HomeView.xaml"
    Title="MainWindow" Height="350" Width="525">
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="Spec" Source="SpecEditor.xaml"></mui:Link>
        <mui:Link DisplayName="Home" Source="HomeView.xaml"></mui:Link>
    </mui:ModernWindow.TitleLinks>
    
    <mui:ModernWindow.MainMenu>
        <mui:LinkGroup DisplayName="Group1" SelectedSource="HomeView.xaml">
            <mui:Link DisplayName="Spec" Source="SpecEditor.xaml"></mui:Link>
            <mui:Link DisplayName="Home" Source="HomeView.xaml"></mui:Link>
        </mui:LinkGroup>

        <mui:LinkGroup DisplayName="Group2" SelectedSource="TradeEditor.xaml">
            <mui:Link DisplayName="Spec" Source="TradeEditor.xaml"></mui:Link>
            <mui:Link DisplayName="Home" Source="SpecLibraryCtl.xaml"></mui:Link>
        </mui:LinkGroup>
    </mui:ModernWindow.MainMenu>
</mui:ModernWindow>
